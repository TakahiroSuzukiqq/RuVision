<%= form_with(model: booking, local: true) do |form| %>
  <% if booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% booking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_select :start_date, id: :booking_start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_select :end_date, id: :booking_end_date %>
  </div>

  <div class="field">
    <%= form.label :guest_number %>
    <%= form.number_field :guest_number, id: :booking_guest_number %>
  </div>

  <div class="field">
    <% if params[:room_id].present? %>
      <%= form.label :room_id %>
      <%= form.hidden_field :room_id, id: :booking_room_id, value: params[:room_id] %> 
    <% end %>
  </div>
  
  <p>If you own this booking then check below check box</p>
   <div class="field">
    <%= form.label :approved %>
    <%= form.check_box :approved, id: :booking_approved %>
  </div>

  <div class="field">
    <%#= form.label :user_id %>
    <%#= form.text_field :user_id, id: :booking_user_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
