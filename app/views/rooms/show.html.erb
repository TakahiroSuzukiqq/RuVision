<p id="notice"><%= notice %></p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@room.price) + " per night in USD "%> 
</p>

<p>
  <strong>Description:</strong>
  <%= @room.description %>
</p>

<p>
  <strong>Title:</strong>
  <%= @room.title %>
</p>

<p>
  <strong>User:</strong>
  <%= @room.user.email %>
</p>

<p>
  <strong>Capacity:</strong>
  <%= @room.capacity %>
</p>

<p>
  <strong>Pets:</strong>
  <%= yes_or_no(@room.pets) %>
</p>

<p>
  <strong>Smoking:</strong>
  <%= yes_or_no(@room.smoking) %>
</p>

<p>
  <strong>Wifi:</strong>
  <%= yes_or_no(@room.wifi) %>
</p>

<p>
  <strong>Bathrooms:</strong>
  <%= yes_or_no(@room.bathrooms) %>
</p>

<p>
  <strong>Bath:</strong>
  <%= yes_or_no(@room.bath) %>
</p>

<p>
  <strong>Share:</strong>
  <%= yes_or_no(@room.share) %>
</p>

<p>
  <strong>Parties:</strong>
  <%= yes_or_no(@room.parties) %>
</p>

  <div class="image_class">
    <% @room.images.each do |image| %>
       <% if @room.images != nil %>
         <img src="<%= image.url %>" class="image_size">
       <% else %>
         <%= "No images for this room" %>
       <% end %>
    <% end %>
  </div>

<br>
<br>

